<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_color_background"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/txtNameUserGist"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="Jose"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtDescriptionGist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:text="Description Gist" />

        <TextView
            android:id="@+id/txtDescriptionTypeFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:text="tipo do arquivo:" />

        <TextView
            android:id="@+id/txtOpenFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/black"
            android:textColor="@color/green_200"
            android:text="Abrir Arquivo" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clContainerItemsDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtCreateAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green_200"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Criado em 22/10/2001" />

            <TextView
                android:id="@+id/txtUpdateAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Editado em 22/10/2002" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>
